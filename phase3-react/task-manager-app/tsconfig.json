{
  "compilerOptions": {
    "jsx": "react-jsx",          // for React 17+ JSX transform
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "eslint.config.js",
    "postcss.config.js",
    "tailwind.config.js"
  ]
}
